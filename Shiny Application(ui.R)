library(markdown)

shinyUI(fluidPage(
    
    titlePanel("Choose a car that you want depending upon different characteristics"),
    
    sidebarLayout(
        sidebarPanel(
            helpText("Provide the following information"),
            numericInput('d', 'Distance :', 50, min = 1, max = 100),
            numericInput('CP', 'Cost Price (per gallon):', 2.41, min = 2, max = 4, step=0.01),
            numericInput('g', 'Max Spending:', 50, min=1, max=100),
            checkboxGroupInput('c', 'No. of cylinders:', c("Four"=4, "Six"=6, "Eight"=8), selected = c(4,6,8)),
            sliderInput('d', 'Displacement', min=70, max=480, value=c(70,480), step=10),
            sliderInput('h', 'Total Horsepower', min=50, max=340, value=c(50,340), step=10),
            checkboxGroupInput('tm', 'Transmission:', c("Automatic"=0, "Manual"=1), selected = c(0,1))
        ),
        mainPanel(
            dataTableOutput('table')
        )
    )
    
)
)   
